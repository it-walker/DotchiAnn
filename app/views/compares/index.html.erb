<%= form_tag compares_compare_path do %>
    <!-- どっち安アプリ -->
    <div id="main" class="container-fluid">
        <div class="row">
            <div id="left" class="col-xs-6">
                <div class="form-group">
                    <label for="left-price">価格</label>
                    <input id="left-price" name="leftPrice" type="text" maxlength="20" class="form-control"> 
                </div>
                <div class="form-group">
                    <label for="left-capacity">容量（ml, g, cc, cmなど）</label>
                    <input id="left-capacity" name="leftCapacity" type="text" maxlength="5" class="form-control">
                </div>
                <div class="form-group">
                    <label for="left-number">個数</label>
                    <span class="glyphicon glyphicon-question-sign" data-toggle="popover" title="個数とは" data-content="個数が１個の場合は省略可能です。"></span>
                    <input id="left-number" name="leftNumber" type="text" maxlength="5" class="form-control" aria-describedby="left-help-block">
                </div>
            </div>
            <div id="right" class="col-xs-6">
                <div class="form-group">
                    <label for="right-price">価格</label>
                    <input id="right-price" name="rightPrice" type="text" maxlength="20" class="form-control"> 
                </div>
                <div class="form-group">
                    <label for="right-capacity">容量（ml, g, cc, cmなど）</label>
                    <input id="right-capacity" name="rightCapacity" type="text" maxlength="5" class="form-control">
                </div>
                <div class="form-group">
                    <label for="right-number">個数</label>
                    <span class="glyphicon glyphicon-question-sign" data-toggle="popover" title="個数とは" data-content="個数が１個の場合は省略可能です。"></span>
                    <input id="right-number" name="rightNumber" type="text" maxlength="5" class="form-control" aria-describedby="right-help-block">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-3">
                <button id="clear-left" type="button" class="btn btn-primary btn-lg glyphicon glyphicon-trash"></button>
            </div>
            <div class="col-xs-6">
                <button type="submit" class="btn btn-primary btn-lg btn-block">比較！</button>
            </div>
            <div class="col-xs-3">
                <button id="clear-right" type="button" class="btn btn-primary btn-lg glyphicon glyphicon-trash pull-right"></button>
            </div>
        </div>
    </div>
<% end %>
