<%= form_tag compares_compare_path do %>
    <!-- どっち安アプリ -->
    <div id="main" class="container-fluid">
        <div class="row">
            <div id="left" class="col-xs-6">
                <div class="l-panel-group">
                    <div class="form-group">
                        <label for="left-price"><%= @lblPrice %></label>
                        <input name="leftPrice" type="text" maxlength="20" class="form-control"> 
                    </div>
                    <div class="form-group">
                        <label for="left-capacity"><%= @lblCapacity %></label>
                        <input name="leftCapacity" type="text" maxlength="5" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="left-number"><%= @lblNumber %></label>
                        <span class="glyphicon glyphicon-question-sign" data-toggle="popover" title="個数とは" data-content="個数が１個の場合は省略可能です。"></span>
                        <input name="leftNumber" type="text" maxlength="5" class="form-control" aria-describedby="left-help-block">
                    </div>
                    <button id="clear-left" type="button" class="btn btn-success btn-lg btn-block"><%= @btnClear %></button>
                </div>
            </div>
            <div id="right" class="col-xs-6">
                <div class="l-panel-group">
                    <div class="form-group">
                        <label for="right-price"><%= @lblPrice %></label>
                        <input name="rightPrice" type="text" maxlength="20" class="form-control"> 
                    </div>
                    <div class="form-group">
                        <label for="right-capacity"><%= @lblCapacity %></label>
                        <input name="rightCapacity" type="text" maxlength="5" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="right-number"><%= @lblNumber %></label>
                        <span class="glyphicon glyphicon-question-sign" data-toggle="popover" title="個数とは" data-content="個数が１個の場合は省略可能です。"></span>
                        <input name="rightNumber" type="text" maxlength="5" class="form-control" aria-describedby="right-help-block">
                    </div>
                    <button id="clear-right" type="button" class="btn btn-success btn-lg btn-block"><%= @btnClear %></button>
                </div>
            </div>
        </div>
        <div class="row hide">
            <div class="col-ms-3">
                <label><%= @leftPerCapacity %></label>
            </div>
            <div class="col-ms-6">
            </div>
            <div class="col-ms-3">
                <label><%= @rightPerCapacity %></label>
            </div>
        </div>
        <div class="row l-footer">
            <div class="col-xs-3">
            </div>
            <div class="col-xs-6">
                <button type="submit" class="btn btn-success btn-lg btn-block"><%= @btnCompare %></button>
            </div>
            <div class="col-xs-3">
            </div>
        </div>
    </div>
<% end %>
